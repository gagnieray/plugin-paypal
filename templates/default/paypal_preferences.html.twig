{% extends 'page.html.twig' %}

{% block content %}
    <form action="{{ path_for("store_paypal_preferences") }}" method="post" enctype="multipart/form-data">
    {% if not paypal.isLoaded() %}
            <div id="errorbox">
                <h1>{{ _T("- ERROR -") }}</h1>
            </div>
    {% endif %}
        <div class="bigtable">
            <input type="hidden" name="valid" value="1"/>
            <fieldset class="cssform paypalprefs ">
                <legend class="ui-state-active ui-corner-top">{{ _T("Paypal preferences", "paypal") }}</legend>
    {% if login.isAdmin() %}
                <p>
                    <label for="paypal_id" class="bline">{{ _T("Paypal identifier:", "paypal") }}</label>
                    <span class="tip">{{ _T("Enter here one of your Paypal ID or email adress associated within your paypal account.", "paypal") }}</span>
                    <input type="text" name="paypal_id" id="paypal_id" value="{{ paypal.getId() }}" required/>
                </p>
    {% endif %}
    {% if paypal.areAmountsLoaded() and amounts|length > 0 %}
                <table>
                    <thead>
                        <tr>
                            <th class="listing">{{ _T("Contribution type") }}</th>
                            <th class="listing">{{ _T("Amount") }}</th>
                            <th class="listing">{{ _T("Inactive") }}</th>
                        </tr>
                    </thead>
                    <tbody>
        {% for k, amount in amounts %}
                        <tr>
                            <td>
                                <input type="hidden" name="amount_id[]" id="amount_id_{{ k }}" value="{{ k }}"/>
                                <label for="amount_{{ k }}">{{ amount['name'] }}</label>
                            </td>
                            <td>
                                <input type="text" name="amounts[]" id="amount_{{ k }}" value="{{ amount['amount']|number_format(2, ' ', ',') }}"/>
                            </td>
                            <td>
                                <input type="checkbox" name="inactives[]" id="inactives_{{ k }}"{% if paypal.isInactive(k) %} checked="checked"{% endif %} value="{{ k }}"/>
                            </td>
                        </tr>
        {% endfor %}
                    </tbody>
                </table>
            </fieldset>
    {% else %}
            <p>{{ _T("Error: no predefined amounts found.", "paypal") }}</p>
    {% endif %}

        </div>
        <div class="button-container">
            <input type="submit" value="{{ _T("Save") }}"/>
            {% include "components/forms/csrf.html.twig" %}
        </div>
    </form>
{% endblock %}
